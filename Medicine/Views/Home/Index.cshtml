@model IEnumerable<Medicine.ViewModels.MedicationsVM>

@{
    ViewBag.Title = "Index";
}

<center>
    <h3>Animal Protection Leauge</h3>
    <h5>Medications List</h5>  

</center>

<p>
    @Html.ActionLink("Create New", "AddMeds")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlertThreshold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlertThreshold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            <center> @Html.ActionLink("Edit", "EditMeds", new { id = item.ID }) </center>
            @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
        </td>
    </tr>
    }   

</table>
